<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/dark">
    <TextView
        android:paddingLeft="@dimen/regular2"
        android:id="@+id/bill_date1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans"
        android:textColor="@color/light10"
        android:text="1/1/2024"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background_listview"
        android:backgroundTint="@color/dark10">

        <LinearLayout
            android:layout_marginLeft="@dimen/regular2"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bill_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:fontFamily="@font/opensans"
                android:textSize="@dimen/regular1"
                android:textColor="@color/light"/>
            <TextView
                android:id="@+id/bill_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans"
                android:text="Time"
                android:textSize="@dimen/regular2"
                android:textColor="@color/light"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/regular2">
            <TextView
                android:gravity="end"
                android:id="@+id/bill_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans"
                android:text="Menoy"
                android:textSize="@dimen/regular2"
                android:textColor="@color/light"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>