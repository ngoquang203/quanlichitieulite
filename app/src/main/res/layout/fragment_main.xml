<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frament.MainFragment"
    android:background="@color/dark"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="@color/green">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/title2"
            android:layout_marginTop="@dimen/title2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/notosans_font"
                android:gravity="center"
                android:text="Xin chào, "
                android:textSize="@dimen/title3"
                android:textStyle="bold"
                android:textColor="@color/light100"/>

            <TextView
                android:id="@+id/main_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/notosans_font"
                android:gravity="center"
                android:text="Tên"
                android:textSize="@dimen/title3"
                android:textStyle="bold"
                android:textColor="@color/light100"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/title2"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_border"
            android:backgroundTint="@color/dark10"
            android:orientation="horizontal"
            android:paddingVertical="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/notosans_font"
                    android:gravity="start"
                    android:text="Số dư tài khoản"
                    android:textColor="@color/light"
                    android:textSize="@dimen/regular2" />

                <TextView
                    android:id="@+id/main_sumNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/notosans_font"
                    android:text="$9400"
                    android:textColor="@color/light"
                    android:autoSizeMaxTextSize="@dimen/title2"
                    android:autoSizeMinTextSize="@dimen/regular2"
                    android:textStyle="bold" />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dark20"
                android:layout_marginLeft="@dimen/regular2"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/regular2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tháng 4"
                    android:gravity="center"
                    android:textColor="@color/light"
                    android:fontFamily="@font/robuto_font"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/background_nobutton"
                        android:backgroundTint="@color/light100"
                        android:src="@drawable/frame_blue" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosans_font"
                            android:text="Tiền thu"
                            android:textColor="@color/green100"
                            android:textSize="@dimen/regular2" />

                        <TextView
                            android:id="@+id/main_sumCollect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoSizeMaxTextSize="@dimen/title2"
                            android:fontFamily="@font/notosans_font"
                            android:text="$5000"
                            android:textColor="@color/green100"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/background_nobutton"
                        android:backgroundTint="@color/light100"
                        android:src="@drawable/frame_red" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosans_font"
                            android:text="Tiền chi"
                            android:textColor="@color/red100"
                            android:textSize="@dimen/regular2" />

                        <TextView
                            android:id="@+id/main_sumSpent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoSizeMaxTextSize="@dimen/title2"
                            android:fontFamily="@font/notosans_font"
                            android:text="$5000"
                            android:textColor="@color/red100"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/blue"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dịch vụ"
            android:fontFamily="@font/robuto_font"
            android:textSize="@dimen/regular2"
            android:layout_marginLeft="15dp"
            android:textColor="@color/light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/dark10"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/main_addIncomeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_border"
                        android:backgroundTint="@color/light"
                        android:paddingVertical="15dp"
                        android:paddingHorizontal="20dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/frame_blue"
                            android:contentDescription="@string/listview_erron"/>
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thêm thu"
                        android:textColor="@color/light"
                        android:textSize="@dimen/regular3"
                        android:fontFamily="@font/opensans"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_addExpenceButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/blue10"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_border"
                        android:backgroundTint="@color/light"
                        android:paddingVertical="15dp"
                        android:paddingHorizontal="20dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/frame_red"
                            android:contentDescription="@string/listview_erron"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thêm chi"
                        android:textColor="@color/light"
                        android:textSize="@dimen/regular3"
                        android:fontFamily="@font/opensans"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/main_buttonPlanMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue10"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_border"
                        android:backgroundTint="@color/light"
                        android:paddingVertical="15dp"
                        android:paddingHorizontal="20dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/wallet_3"
                            android:contentDescription="@string/listview_erron"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kế hoạch"
                        android:textColor="@color/light"
                        android:textSize="@dimen/regular3"
                        android:fontFamily="@font/opensans"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Chi tiêu trong hôm nay"
            android:fontFamily="@font/robuto_font"
            android:textSize="@dimen/regular2"
            android:layout_marginLeft="15dp"
            android:textColor="@color/light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_partboder"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/dark"
            android:orientation="vertical">
            <TextView
                android:id="@+id/main_textViewErron"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Không có chi tiêu trong hôm nay"
                android:textColor="@color/light"
                android:visibility="visible"/>
            <ListView
                android:id="@+id/main_viewpager2"
                android:layout_width="match_parent"
                android:contentDescription="@string/listview_erron"
                android:layout_height="match_parent"
                android:background="@color/light60"
                android:backgroundTint="@color/dark"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>