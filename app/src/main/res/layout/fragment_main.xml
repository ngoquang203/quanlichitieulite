                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/notosans_font"
                    android:text="Tháng"
                    android:textStyle="bold"
                    android:textSize="@dimen/title3" />
                <TextView
