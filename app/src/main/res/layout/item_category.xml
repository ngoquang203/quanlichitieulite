<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_partboder">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/regular2">
            <TextView
                android:id="@+id/item_titleCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="@dimen/title2"/>
            <TextView
                android:id="@+id/item_suptextCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suptext"
                android:textSize="@dimen/regular2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>