<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title2"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/planMoney_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/dark"
            android:contentDescription="@string/listview_erron"
            android:src="@drawable/arrowleft" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/regular2"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_bold"
            android:text="Lập kế hoạch chi tiêu"
            android:textColor="@color/light"
            android:textSize="@dimen/title2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title2"

        android:paddingHorizontal="@dimen/regular2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/planMoney_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border"
            android:backgroundTint="@color/dark10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Thêm kế hoạch chi tiêu"
                    android:textColor="@color/light"
                    android:textSize="@dimen/regular1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/opensans"
                    android:text="Thêm kế hoạch mới"
                    android:textColor="@color/light10"
                    android:textSize="@dimen/regular2" />
            </LinearLayout>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="@string/listview_erron"
                android:src="@drawable/add" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/planMoney_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title2"
            android:background="@drawable/background_border"
            android:backgroundTint="@color/dark10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:text="Quản lí kế hoạch"
                        android:textColor="@color/light"
                        android:textSize="@dimen/regular1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/opensans"
                        android:text="Quản lí kế hoạch đã nhập"
                        android:textColor="@color/light10"
                        android:textSize="@dimen/regular2" />
                </LinearLayout>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/listview_erron"
                    android:src="@drawable/savings" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/planMoney_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/regular1"
        android:paddingHorizontal="@dimen/regular2"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông báo"
            android:textSize="@dimen/regular2"
            android:textColor="@color/light"
            android:fontFamily="@font/opensans"/>
        <ListView
            android:id="@+id/planMoney_listView"
            android:layout_width="match_parent"
            android:contentDescription="@string/listview_erron"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
