<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/dark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/title2">
        <ImageButton
            android:id="@+id/planMoney_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/arrowleft"
            android:contentDescription="@string/listview_erron"
            android:background="@color/dark"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/regular2"
            android:text="Kế hoạch"
            android:textSize="@dimen/title2"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/light" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/regular2"
        android:layout_marginTop="@dimen/title2">
        <LinearLayout
            android:id="@+id/planMoney_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_border"
            android:backgroundTint="@color/dark10">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thêm kế hoạch"
                    android:textSize="@dimen/regular1"
                    android:fontFamily="@font/opensans_bold"
                    android:textColor="@color/light"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Thêm kế hoạch mới"
                    android:textColor="@color/light10"
                    android:textSize="@dimen/regular2"
                    android:fontFamily="@font/opensans"/>
            </LinearLayout>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/add"
                android:contentDescription="@string/listview_erron"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/planMoney_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/title2"
            android:background="@drawable/background_border"
            android:backgroundTint="@color/dark10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quản lí"
                        android:textSize="@dimen/regular1"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/light"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Quản lí kế hoạch đã thêm"
                        android:textColor="@color/light10"
                        android:textSize="@dimen/regular2"
                        android:fontFamily="@font/opensans"/>
                </LinearLayout>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/salary"
                    android:contentDescription="@string/listview_erron"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
