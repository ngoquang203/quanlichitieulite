<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/SCREEN"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title2"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/planMoney_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/listview_erron"
            android:src="@drawable/left"
            style="@style/Widget.MaterialComponents.ShapeableImageView.NEWIMAGEVIEW" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/regular2"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_bold"
            android:text="Lập kế hoạch chi tiêu"
            android:textSize="@dimen/title2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title2"

        android:paddingHorizontal="@dimen/regular2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/planMoney_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border"
            android:theme="@style/CardView.NewCardView"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Thêm kế hoạch chi tiêu"
                    android:textSize="@dimen/regular1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/opensans"
                    android:text="Thêm kế hoạch mới"
                    android:textSize="@dimen/regular2" />
            </LinearLayout>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="@string/listview_erron"
                style="@style/Widget.MaterialComponents.ShapeableImageView.NEWIMAGEVIEW2"
                android:src="@drawable/add" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/planMoney_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title2"
            android:background="@drawable/background_border"
            android:theme="@style/CardView.NewCardView"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:text="Quản lí kế hoạch"
                        android:textSize="@dimen/regular1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/opensans"
                        android:text="Quản lí kế hoạch đã nhập"
                        android:textSize="@dimen/regular2" />
                </LinearLayout>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/listview_erron"
                    style="@style/Widget.MaterialComponents.ShapeableImageView.NEWIMAGEVIEW2"
                    android:src="@drawable/plan" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/planMoney_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/regular1"
        android:paddingHorizontal="@dimen/regular2"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông báo"
            android:textSize="@dimen/regular2"
            android:fontFamily="@font/opensans"/>
        <ListView
            android:id="@+id/planMoney_listView"
            android:layout_width="match_parent"
            android:contentDescription="@string/listview_erron"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
