<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/regular2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">
        <ImageButton
            android:id="@+id/dialogSetting_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/upleft"
            android:background="@color/dark"
            android:contentDescription="@string/listview_erron"/>
        <TextView
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/regular2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt"
            android:textColor="@color/light"
            android:textSize="@dimen/title2"
            android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/regular2">
        <LinearLayout
            android:id="@+id/dialogSetting_changeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border"
            android:backgroundTint="@color/dark10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Thông tin"
                    android:textColor="@color/light"
                    android:textSize="@dimen/regular1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/opensans"
                    android:text="Thay đổi thông tin cá nhân"
                    android:textColor="@color/light10"
                    android:textSize="@dimen/regular2" />
            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:contentDescription="@string/listview_erron"
                android:src="@drawable/user"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dialogSetting_changePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border"
            android:backgroundTint="@color/dark10"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/regular2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Mật khẩu"
                    android:textColor="@color/light"
                    android:textSize="@dimen/regular1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/opensans"
                    android:text="Thay đổi mật khẩu"
                    android:textColor="@color/light10"
                    android:textSize="@dimen/regular2" />
            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:contentDescription="@string/listview_erron"
                android:src="@drawable/lock"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>