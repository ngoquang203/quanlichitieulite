<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light60"
    android:orientation="vertical"
    android:padding="@dimen/regular2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/detialCategory_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/arrowleft"
            android:background="@color/light60"/>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin chi tiết"
            android:textSize="@dimen/title1"
            android:fontFamily="@font/robuto_font"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_listview"
        android:layout_marginTop="@dimen/regular2">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số tiền giao dịch"
            android:textSize="@dimen/title2"
            android:fontFamily="@font/robuto_font"/>
        <TextView
            android:id="@+id/detailCategory_money"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+1000"
            android:textSize="@dimen/title2"
            android:fontFamily="@font/robuto_font"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_listview"
        android:layout_marginTop="@dimen/regular2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại giao dịch"
                android:textColor="@color/dark20"
                android:textSize="@dimen/title3"
                android:fontFamily="@font/robuto_font"/>
            <TextView
                android:id="@+id/detailCategory_title"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiền sinh hoạt"
                android:textSize="@dimen/title3"
                android:fontFamily="@font/robuto_font"/>
        </LinearLayout>
        <TextView
            android:id="@+id/detailCategory_content"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiền nhà"
            android:textSize="@dimen/title3"
            android:fontFamily="@font/robuto_font"
            android:layout_marginVertical="7dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark20"
                android:text="Ngày giao dịch"
                android:textSize="@dimen/title3"
                android:fontFamily="@font/robuto_font"/>
            <TextView
                android:id="@+id/detailCategory_date"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01/03/2024, 01:09"
                android:textSize="@dimen/title3"
                android:fontFamily="@font/robuto_font"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="7dp">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark20"
                android:text="Số dư"
                android:textSize="@dimen/title3"
                android:fontFamily="@font/robuto_font"/>
            <TextView
                android:id="@+id/detailCategory_moneyNow"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="@dimen/title3"
                android:fontFamily="@font/robuto_font"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>