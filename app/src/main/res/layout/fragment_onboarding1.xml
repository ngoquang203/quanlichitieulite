<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frament.Onboarding1Fragment"
    android:background="@color/light100"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light100"
        android:padding="@dimen/title2">
        <ImageView
            android:layout_marginTop="@dimen/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/onboar1"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:layout_marginTop="@dimen/regular2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giành quyền kiểm soát hoàn toàn tiền của bạn"
            android:textSize="@dimen/title1"
            android:textStyle="bold"
            android:fontFamily="@font/robuto_font"
            android:textColor="@color/dark100"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trở thành người quản lý tiền của riêng bạn"
            android:textSize="@dimen/regular2"
            android:textColor="@color/dark50"
            android:fontFamily="@font/robuto_font"/>
    </LinearLayout>

</FrameLayout>